@model Spike.Support.Payments.Models.PaymentsViewModel
<div class="row">
    <div class="col-md-12">
        <hr/>
        <h4>Payments</h4>
        <hr/>
    </div>
</div>

@foreach (var item in Model.Payments)
{
    if (item.AccountId == Model.Payments.First().AccountId)
    {
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => item.PaymentId)
            </div>
            <div class="col-md-2">
                <a href="~/views/accounts/@item.AccountId">Account @Html.Display($"{item.AccountId}")</a>
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => item.Created)
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => item.Amount)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => item.Amount)
            </div>
        </div>
    }
    <div class="row">
        @{
            Html.RenderPartial("_payment", item);
        }
    </div>
}