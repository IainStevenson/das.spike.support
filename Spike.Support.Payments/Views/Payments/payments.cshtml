@model Spike.Support.Payments.Models.PaymentsViewModel
<h2>Payments</h2>
<div class="container">
    @foreach (var item in Model.Payments)
    {
        if (item.AccountId == Model.Payments.First().AccountId)
        {
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => item.PaymentId)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => item.AccountId)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => item.Amount)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => item.Created)
                </div>
            </div>
        }
        <div class="row">
            @{
                Html.RenderPartial("_payment", item);
            }
        </div>
    }
</div>
