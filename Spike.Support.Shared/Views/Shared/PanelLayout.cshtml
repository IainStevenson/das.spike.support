@using Spike.Support.Shared.Models
@{
    Menu menu = (ViewBag ?? new {}).Menu ?? new Menu() { NavItems = new List<NavItem>()};
    List<NavItem> menuItems = menu.NavItems;
}
<div class="row">
    <div class="col-lg-12" id="panelHeader">
        @Html.Raw((ViewBag ?? new { }).Header ?? string.Empty)
    </div>
</div>
<div class="row">
    @if (menuItems.Count > 0)
    {
        var activeMenuItem = (menu.ActiveMenuItemKeys.FirstOrDefault() ?? string.Empty);
        var orientation = "lex-column";

        <div class="col-md-1" id="panelNavigation">
            <ul class="nav nav-pills @orientation">
                @foreach (var menuItem in menuItems)
                {
                    var isActive = (activeMenuItem.ToLower() == @menuItem.Key.ToLower() ? "active" : "");
                    <li class="nav-item">
                        <a class="nav-link @isActive"
                           id="menu@menuItem.Key"
                           href="@menuItem.NavigateUrl">@menuItem.Text</a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-11" id="panelContent">
            @RenderBody()
        </div>
    }
    else
    {
        <div class="col-lg-12" id="panelContent">
            @RenderBody()
        </div>
    }

</div>
