@model Spike.Support.Accounts.Models.AccountsViewModel
<h2>Accounts</h2>
<div class="container">
    @foreach (var item in Model.Accounts)
    {
        if (item.AccountId == Model.Accounts.First().AccountId)
        {
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => item.AccountId)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => item.AccountName)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => item.Created)
                </div>
            </div>
        }
        <div class="row">
            @{
                Html.RenderPartial("_account", item);
            }
        </div>
    }
</div>
