@model Spike.Support.Portal.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="alert alert-success">
    <h1>DAS Support - Navigation Spike</h1>
    <span>Provides an architectural alternative for Site-Site collaboration and composite UI delivery.</span>
</div>

<div class="card text-white bg-dark">
    <div class="card-header">User search</div>
    <div class="card-body">
        @{
            if (Model.UsersView != null)
            {
                @Html.Raw(Model.UsersView)
            }
        }
    </div>
</div>
<hr />
<div class="card text-white bg-dark mb-3">
    <div class="card-header">Account search</div>
    <div class="card-body">
        @{
            if (Model.AccountsView != null)
            {
                @Html.Raw(Model.AccountsView)
            }
        }
    </div>
</div>